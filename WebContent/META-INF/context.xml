<?xml version="1.0" encoding="UTF-8"?>

<Context>
    <Resource name="jdbc/socialnotes"
        auth="Container"
        driverClassName="com.mysql.cj.jdbc.Driver"
        type="javax.sql.DataSource"
        username="your MySQL username"
        password="your MySQL password"
        url="jdbc:mysql://localhost:3306/socialnotes?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;autoReconnect=true&amp;serverTimezone=UTC&amp;useSSL=false&amp;allowPublicKeyRetrieval=true"/>
        <!--Default sql port is 3306 but if you need you can change it-->
</Context>
